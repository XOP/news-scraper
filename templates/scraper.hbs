<div class="scraper">
    <div class="scraper__heading">
        {{#>heading tag="h2" level=2}}
            Let's get some News!
        {{/heading}}
    </div>

    <div class="scraper__settings" v-if="!settings.isHidden">
        <update-type></update-type>    
    </div>
    
    <div class="scraper__progress" v-if="!progress.isHidden">
        <progress-bar 
            :current-value="progress.current"
            :total-value="progress.total"
            :messages="progress.messages"
            :results-href="progress.resultsHref"
        ></progress-bar>
    </div>
    
    <div class="scraper__error" v-if="!error.isHidden">
        <message
            icon
            type="error"
            v-text="error.value"
        ></message>
    </div>
    
    <div class="scraper__form">
        <scraper-form
            :directives="directives"
            :directive-groups-selected="directiveGroupsSelected"
            :directives-selected="directivesSelected"
            :is-busy="isBusy"
        ></scraper-form>
    </div>
    
    <div class="scraper__results" v-if="!result.isHidden" v-for="section in result.pages">
        <news-section
            :news="section.data"
            :title="section.title"
            :url="section.url"
        ></news-section>
    </div>

    <!-- debug/ -->
    <div class="scraper__debug" v-if="debug">
        <button class="button button--small" @click="debugSaveData">
            <icon name="download"></icon>
        </button>
        <button class="button button--small" @click="debugLoadData">
            <icon name="upload"></icon>
        </button>
        <button class="button button--small" @click="debugClearData">
            <icon name="trash"></icon>
        </button>
    </div>
    <!-- /debug -->
</div>
