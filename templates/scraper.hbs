<div class="scraper">
    <div class="scraper__heading">
        {{#>heading tag="h2" level=2}}
            Let's get some News!
        {{/heading}}
    </div>

    <div class="scraper__settings">
        <update-type />    
    </div>
    
    <div class="scraper__progress">
        <div class="progress" data-id="scraper-progress" style="display: none;">
            <!-- hidden until implementation is complete -->
            <div class="progress__element" style="display: none;">
                <progress value="1" max="250"></progress>
            </div>
            <div class="progress__message"></div>
        </div>
    </div>

    <div class="scraper__error" data-id="scraper-error" style="display: none;">
        <div class="message message--error"></div>
    </div>
    
    <div class="scraper__form">
        {{#if directives}}
        <form class="form" action="/scraper" method="post" data-id="scraper-form">
            <div class="form__row">
                {{#each directives}}
                    {{> directive-group}}
                {{/each}}
            </div>
            <div class="form__row">
                <input type="submit" data-id="scraper-submit" disabled value="Get news!"/>
            </div>
        </form>
        <strong data-id="scraper-spinner" style="display: none;">
            {{> spinner screen=true}}
        </strong>
        {{else}}
            <div class="message">
                No directives found :(
            </div>
        {{/if}}
    </div>
</div>
